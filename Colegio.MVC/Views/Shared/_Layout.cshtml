<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Entidades <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Alumnos", "Index", "Alumnos")</li>
                            <li>@Html.ActionLink("Apoderados", "Index", "Apoderados")</li>
                            <li>@Html.ActionLink("Áreas Curriculares", "Index", "AreaCurricular")</li>
                            <li>@Html.ActionLink("Asistencias", "Index", "Asistencias")</li>
                            <li>@Html.ActionLink("Aulas", "Index", "Aulas")</li>
                            <li>@Html.ActionLink("Cursos", "Index", "Cursos")</li>
                            <li>@Html.ActionLink("Direcciones", "Index", "Direcciones")</li>
                            <li>@Html.ActionLink("Distritos", "Index", "Distritos")</li>
                            <li>@Html.ActionLink("Evaluaciones", "Index", "Evaluaciones")</li>
                            <li>@Html.ActionLink("Grados", "Index", "Grados")</li>
                            <li>@Html.ActionLink("Horarios", "Index", "Horaios")</li>
                            <li>@Html.ActionLink("Matrículas", "Index", "Matriculas")</li>
                            <li>@Html.ActionLink("Niveles", "Index", "Niveles")</li>
                            <li>@Html.ActionLink("Notas", "Index", "Notas")</li>
                            <li>@Html.ActionLink("Profesores", "Index", "Profesores")</li>
                            <li>@Html.ActionLink("Recibos", "Index", "Recibos")</li>
                            <li>@Html.ActionLink("Sesiones de Clase", "Index", "Sesiones")</li>
                            <li>@Html.ActionLink("Tipo de Evaluaciones", "Index", "Evaluaciones")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
